{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "registry": "https://registry.npmjs.org/",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "allowBranch": "release/*",
      "bump": "patch",
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
