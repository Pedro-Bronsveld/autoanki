{
  "name": "@autoanki/monorepo",
  "private": true,
  "version": "0.0.1",
  "description": "Automatic anki toolkit",
  "scripts": {
    "update-config": "lerna run update-config",
    "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "yarn run lint --fix",
    "lint-styles": "stylelint --allow-empty-input '**/*.*(css|scss|jsx|tsx)'",
    "lint-styles-fix": "yarn run lint-styles --allow-empty-input --fix",
    "prettier": "prettier --check  .",
    "prettier-fix": "prettier --write .",
    "prepare": "husky install",
    "publish": "echo \"Use 'pnpm run publish-next' or 'pnpm run publish-release' instead of 'pnpm run publish'\"",
    "publish-canary": "lerna publish --canary --yes",
    "publish-next": "lerna publish prerelease --pre-dist-tag=next --preid=next --allow-branch=main --message=\"chore(release): publish next\"",
    "publish-preminor": "lerna publish preminor --pre-dist-tag=next --preid=next --force-publish --allow-branch=main --message=\"chore(release): publish next pre-minor\"",
    "publish-rc": "lerna publish prerelease --pre-dist-tag=rc --preid=rc --message=\"chore(release): publish rc\"",
    "publish-release": "lerna publish patch"
  },
  "engines": {
    "pnpm": ">=7.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@fast-check/jest": "^1.4.0",
    "@jest/globals": "^29.3.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.14",
    "@types/jest": "^29.2.2",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "^0.15.13",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "fast-check": "^3.3.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "lerna": "^6.0.3",
    "lint-staged": "^13.0.3",
    "lodash-es": "^4.17.21",
    "nx": "^15.0.13",
    "prettier": "^2.7.1",
    "require-json5": "^1.3.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "verdaccio": "^5.16.3"
  }
}
